<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="recipe"
            type="com.danthecodinggui.recipes.model.RecipeViewModel"/>
    </data>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/crd_basic"
        style="@style/RecipeCard">

        <LinearLayout
            android:padding="10dp"
            style="@style/CardBody">

            <TextView
                android:id="@+id/txt_crd_title"
                style="@style/CardRecipeTitle"
                android:text="@{recipe.getTitle()}"
                tools:text="American Pancakes" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_crd_ingredient_no"
                    style="@style/CardText"
                    android:text="@{@plurals/txt_ingredients_no(recipe.getIngredientsNo())}"
                    tools:text="5 ingredients"/>

                <TextView
                    android:id="@+id/txt_crd_steps_no"
                    style="@style/CardText"
                    android:layout_alignParentEnd="true"
                    android:text="@{@plurals/txt_method_steps_no(recipe.getStepsNo())}"
                    tools:text="6 steps"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>