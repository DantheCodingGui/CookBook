<resources>

    <!-- Base application theme. -->
    <style name="HomeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>

        <item name="android:windowExitTransition">@transition/main_activity_exit</item>
        <item name="android:windowReenterTransition">@transition/main_activity_enter</item>

        <item name="android:windowSharedElementEnterTransition">@transition/view_activity_shared_image</item>
        <item name="android:windowSharedElementReturnTransition">@transition/view_activity_shared_image</item>
    </style>

    <style name="HomeTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- View Activity theme. -->
    <style name="ViewRecipeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:windowIsTranslucent">true</item>

        <item name="android:windowEnterTransition">@transition/view_activity_enter</item>
        <item name="android:windowReturnTransition">@transition/view_activity_exit</item>

        <item name="android:windowSharedElementEnterTransition">@transition/view_activity_shared_image</item>
        <item name="android:windowSharedElementReturnTransition">@transition/view_activity_shared_image</item>
    </style>

    <style name="AddRecipeTheme" parent="HomeTheme">

        <item name="android:statusBarColor">@color/backToolbar</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.SearchView">
        <item name="colorControlNormal">@color/material_light_active_icon</item>
        <item name="colorControlHighlight">@color/material_ripple_light</item>
        <item name="android:maxWidth">9999dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="RecipeCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardElevation">2dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="CardRecipeTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardText">
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CardImagePreview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="CardBody">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
    </style>

    <style name="FabTag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:visibility">invisible</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="AddRecipeClickable">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="FabMenuItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:visibility">invisible</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_gravity">bottom|end</item>
    </style>

    <style name="AddRecipeRemoveButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">3dp</item>
        <item name="android:src">@drawable/ic_remove_textview</item>
    </style>

    <style name="EditTextViewIcon">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:src">@drawable/ic_edit_textview</item>
    </style>
</resources>
