<?xml version="1.0" encoding="utf-8"?>
<transitionSet
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="200">
    <slide
        android:slideEdge="top">
        <targets>
            <target android:targetId="@+id/lly_toolbar_container"/>
        </targets>
    </slide>
    <slide
        android:slideEdge="bottom">
        <targets>
            <target android:targetId="@+id/fab_add_menu"/>
        </targets>
    </slide>
    <slide
        android:slideEdge="left">
        <targets>
            <target android:targetId="@+id/crdv_ingredients"/>
            <target android:targetId="@+id/crdv_method"/>
            <target android:targetId="@android:id/statusBarBackground"/>
        </targets>
    </slide>
</transitionSet>