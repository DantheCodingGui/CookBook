<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.danthecodinggui.recipes">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity
            android:name=".view.MainActivity"
            android:theme="@style/HomeTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.view_recipe.ViewRecipeActivity"
            android:parentActivityName=".view.MainActivity"
            android:theme="@style/ViewRecipeTheme" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".view.AddRecipeActivity"
            android:theme="@style/HomeTheme.Transparent"
            android:parentActivityName=".view.MainActivity"
            android:windowSoftInputMode="adjustResize"/>
    </application>

</manifest>